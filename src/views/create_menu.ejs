<%- include("./layouts/header") %>

<main class="Food-details">
    <h2>Add Menu</h2>
    <p class="error"><%= error %></p>
    <div class="form-container">
       <form action="/menus" method="post">
            <div class="label">
                <label for="name">
                    <p>Food Name</p>
                </label>
                 <input type="text" name="name" id="" value="<%= form[0]?.name %>">
            </div>
             <div class="label">
                <label for="price">
                    <p>Food Price</p>
                </label>
                <input type="number" name="price" id="" value="<%= form[0]?.price %>">
            </div>
            <div class="label">
                <label for="description">
                    <p>Food Description</p>
                </label>
                <input type="text" name="description" id="" value="<%= form[0]?.description %>">
            </div>
            <div class="label">
                <label for="company">
                    <p>Restaurant's Name</p>
                </label>
                <input type="text" name="company" id="" value="<%= form[0]?.company %>">
            </div>
            <div class="label">
                <label for="image">
                    <p>Food Image URL</p>
                </label>
                <input type="string" name="image" id="" value="<%= form[0]?.image %>">
            </div>
            <div class="label">
                <label for="image1">
                    <p>Front View URL</p>
                </label>
                <input type="string" name="image1" id="" value="<%= form[0]?.image1 %>">
            </div>
            <div class="label">
                <label for="image2">
                    <p>Back View URL</p>
                </label>
                <input type="string" name="image2" id="" value="<%= form[0]?.image2 %>">
            </div>
            <div class="label">
                <label for="image3">
                    <p>Right View URL</p>
                </label>
                <input type="string" name="image3" id="" value="<%= form[0]?.image3 %>">
            </div>
            <div class="label">
                <label for="category">
                    <p>Food Category</p>
                </label>
                <select name="category" id="">
                    <option value="Swallows" 
                    <% if (form[0]?.category && form[0].category === 'Swallows') {%>
                         selected 
                        <% } %>
                    >Swallows</option>
                    <option value="Chew"
                    <% if (form[0]?.category && form[0].category === 'Chew') {%>
                         selected 
                        <% } %>
                        >Chew</option>
                    <option value="Snacks"
                    <% if (form[0]?.category && form[0].category === 'Snacks') {%>
                         selected 
                        <% } %>
                        >Snacks</option>
                </select>
            </div>
            <input class="Login btn center" type="submit" value="create menu">
        </form>
    </div>

</main>
    <%- include("./layouts/footer") %>
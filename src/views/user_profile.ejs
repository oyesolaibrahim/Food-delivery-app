<%- include("./layouts/header") %>
    <main class="menus">
        <h2 class="welcome"><%= profile.firstName %> <%= profile.lastName %>'s profile</h2>
        
        <h2>Menu</h2>
        <section class="flex wrap">
            
         <% menus.forEach(function(menu, index) { %>
            
            <article class="menu">
                <img src="<%= menu.imageUrl %>" alt="">
                <h3 class="name"><%= menu.name %></h3>
                <div class="">
                    <p class="price"><%= menu.price %></p>
                    <p class="category"><%= menu.category.charAt(0).toUpperCase() + menu.category.slice(1) %></p>
                </div>
                <h4> <%= menu.company %> </h4>
                <div class="view-food">
                    <a class="Login view-food center" href="/menus/<%= menu._id %>/order">Order Food</a>
                </div>
                </article>
            <%  }) %>
        </section>
        </main>
    <%- include("./layouts/footer") %>
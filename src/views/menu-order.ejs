<%- include("./layouts/header") %>
    <main>
        <section class="flex section">
			<div class="images-part">
					<div class="slide1 flex">
						<!--<div class="pre">
						</div>
						<div class="nextus">
						</div>-->
						<img class="previous2" src="images/icon-previous.svg" alt="previous-img" onclick="previous()"/>
						<img class="next2" src="images/icon-next.svg" alt="next-img" onclick="next()"/>
					</div>
					<div class="slide2">
						<img class="previous" src="images/icon-previous.svg" alt="previous-img" onclick="previous()"/>
						<img class="next" src="images/icon-next.svg" alt="next-img" onclick="next()"/>
					</div>
					<div class="slide3">
						<img class="previous" src="images/icon-previous.svg" alt="previous-img" onclick="previous()"/>
						<img class="next" src="images/icon-next.svg" alt="next-img" onclick="next()"/>
					</div>
					<div class="slide4">
						<img class="previous" src="images/icon-previous.svg" alt="previous-img" onclick="previous()"/>
						<img class="next" src="images/icon-next.svg" alt="next-img" onclick="next()"/>
					</div>
				<div class="product-1">
                    <img width="100%" src="<%= menu.imageUrl %>" alt="menu"/>

						
					<!--<div class="flex next-previous">
						<img class="previous" src="images/icon-previous.svg" alt="previous-img" onclick="previous()"/>	
						<img class="next" src="images/icon-next.svg" alt="next-img" onclick="next()"/>
					
					</div>-->
				</div>
				<div class="shoe-slides">
					<img width="100%" class="product1" src="<%= menu.image1Url %>" alt=""/>
					<img width="100%" class="product2" src="<%= menu.image2Url %>" alt=""/>
					<img width="100%" class="product3" src="<%= menu.image3Url %>" alt=""/>
					<img width="100%" class="product4" src="<%= menu.imageUrl %>" alt=""/>
				</div>
				
				
				<div class="products">
					<img width="100%" src="<%= menu.image1Url %>" alt="product-1" onclick="product1()"/>
					<img width="100%" src="<%= menu.image2Url %>" alt="product-2" onclick="product2()"/>
					<img width="100%" src="<%= menu.image3Url %>" alt="product-3" onclick="product3()"/>
					<img width="100%" src="<%= menu.imageUrl %>" alt="product-4" onclick="product4()"/>
				</div>
			</div>
			
			<div class="description-part">
				<h4 class="error"><%= error %></h4>
				<h3><%= menu.company %></h3>
				<h1> <%= menu.name %> </h1>
				<p> <%= menu.description %></p>
				<p> <%= menu.category.slice(0,1).toUpperCase() + menu.category.slice(1) %></p>
				
					<div class="par">
						<div class="">
							<h2 class="menu-price p-125"><%= menu.price %></h2>
                        </div>
					</div>
				



					<form class="price-quantity" action="/menus/<%= menu._id %>/order" 
						method="post" 
						onsubmit="return confirm('Are you sure you want to order food')"
						>
						<div class="flex2"> 
							<label for="location">
								<p>Location:</p>
							</label>
						
							<% if (user) {%>
							<input type="text" name="location" id="location" value="<%= user.location %>">
							<%}%>
					</div>
					<div class="flex2 price">
							<label for="price">
								<p class="food-price-p">Food Price:<span id="location" class="p-125"></span> </p>
							</label>
							<input type="number" name="price" class="food-price food-price-input" value="<%= form[0]?.price %>" placeholder="<%= menu.price %>" readonly>
					</div>
						<div class="flex cart-down">
							<div class="flex minus-plus">
								<img src="../../images/icon-minus.svg" alt="minus-img" class="minus" onclick="minus()"/>
								<div>
									<label for="quantity">
									</label>
									<input type="number" name="quantity" class="food-quantity zero" oninput="foodPrice()" value="<%= form[0]?.quantity %>" placeholder="0" readonly>
								</div>
								<img src="../../images/icon-plus.svg" alt="plus-img" class="plus" onclick="plus()"/>
							</div>
							<div class="">
								<button class="Login center btn order-button" type="submit">Order Food</button>
							</div>
						</div>
					</form>
			</div>
		</section>
    </main>
    <%- include("./layouts/footer") %>
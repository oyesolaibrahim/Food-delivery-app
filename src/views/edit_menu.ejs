<%- include("./layouts/header") %>
    <main class="Food-details">
        <h2>Edit Menu</h2>
        <p class="error"><%= error %></p>
        <div class="form-container">
           <form action="/menus/<%= menu._id %>?_method=PUT" method="post">
                <div class="label">
                    <label for="name">
                        <p>Food Name</p>
                    </label>
                     <input type="text" name="name" id="" value="<%= menu.name %>">
                </div>
                 <div class="label">
                    <label for="price">
                        <p>Food Price</p>
                    </label>
                    <input type="number" name="price" id="" value="<%= menu.price %>">
                </div>
                <div class="label">
                    <label for="description">
                        <p>Food Description</p>
                    </label>
                    <input type="text" name="description" id="" value="<%= menu.description %>">
                </div>
                <div class="label">
                    <label for="company">
                        <p>Restaurant's Name</p>
                    </label>
                    <input type="text" name="company" id="" value="<%= menu.company %>">
                </div>
                <div class="label">
                    <label for="image">
                        <p>Food Image URL</p>
                    </label>
                    <input type="string" name="image" id="" value="<%= menu.imageUrl %>">
                </div>
                <div class="label">
                    <label for="image1">
                        <p>Front View URL</p>
                    </label>
                    <input type="string" name="image1" id="" value="<%= menu.image1 %>">
                </div>
                <div class="label">
                    <label for="image2">
                        <p>Back View URL</p>
                    </label>
                    <input type="string" name="image2" id="" value="<%= menu.image2 %>">
                </div>
                <div class="label">
                    <label for="image3">
                        <p>Right View URL</p>
                    </label>
                    <input type="string" name="image3" id="" value="<%= menu.image3 %>">
                </div>
                <div class="label">
                    <label for="category">
                        <p>Food Category</p>
                    </label>
                    <select name="category" id="">
                        <option value="Swallow" 
                        <% if (menu.category === 'Swallow') {%>
                             selected 
                            <% } %>
                        >Swallow</option>
                        <option value="Chew"
                        <% if (menu.category === 'Chew') {%>
                             selected 
                            <% } %>
                            >Chew</option>
                        <option value="Snacks"
                        <% if (menu.category === 'Snacks') {%>
                             selected 
                            <% } %>
                            >Snacks</option>
                    </select>
                </div>
                <input class="Login btn" type="submit" value="Edit Food">
            </form>
        </div>

    </main>
    <%- include("./layouts/footer") %>
<%- include("./layouts/header") %>
<main class="Food-details signup-form">
        <h2>User Signup</h2>
        <p class="error"><%= error %></p>
        <div class="form-container">
           <form action="/signup" method="post">
                <div class="label">
                    <label for="fname">
                        <p>First Name</p>
                    </label>
                     <input type="text" name="fname" id="fname" value="<%= form[0]?.fname %>">
                </div>
                 <div class="label">
                    <label for="lname">
                        <p>Last Name</p>
                    </label>
                    <input type="text" name="lname" id="lname" value="<%= form[0]?.lname %>">
                </div>
                <div class="label">
                    <label for="email">
                        <p>Email Address</p>
                    </label>
                    <input type="text" name="email" id="email" value="<%= form[0]?.email %>">
                </div>
                <div class="label">
                    <label for="location">
                        <p>Location</p>
                    </label>
                    <input type="text" name="location" id="" value="<%= form[0]?.location %>">
                </div>
                <div class="label">
                    <label for="password">
                        <p>Password</p>
                    </label>
                    <input type="password" name="password" id="password" value="">
                </div>
                <input class="Login btn" type="submit" value="Create Account">
            </form>
        </div>

    </main>
    <%- include("./layouts/footer") %>